<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BasicText">
<!--        <item name="android:fontFamily">@font/kardinal</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">@font/m700</item>
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ThinText">
        <item name="android:fontFamily">@font/m500</item>
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="BoldTextBlack">
        <item name="android:fontFamily">@font/m700</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="BoldTextBlack2">
        <item name="android:fontFamily">@font/m700</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ThinTextBlack">
        <item name="android:fontFamily">@font/m500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="ThinTextBlack2">
        <item name="android:fontFamily">@font/m400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>
</resources>
